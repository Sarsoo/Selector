pipeline {
    agent any

    stages {
        stage('Build C#') {
            steps {
                dotnetRestore project: "Selector.Core.sln"
                dotnetBuild project: "Selector.Core.sln"
            }
        }

        stage('Build Javascript') {
            steps {
                sh "npm ci"
                sh "npm run build --if-present"
            }
        }
        stage('Test') {
            steps {
                dotnetTest project: "Selector.Core.sln"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    post {
        always {
            steps {
                cleanWs()
            }
        }
    }
}