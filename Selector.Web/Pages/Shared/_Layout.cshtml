<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/index.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-bg separator-border box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Selector</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Now">Now</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://sarsoo.xyz/posts/selector/">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://sarsoo.xyz/about">Contact</a>
                        </li>
                    </ul>
                </div>
            <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2021 - Selector.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
        <div style="text-align: center">
            <a href="https://sarsoo.xyz/about/" style="display: inline-block">
                <img src="/andy.png"
                     alt="AP"
                     width="120px"
                     style="display: block;
                    margin-left: auto;
                    margin-right: auto;
                    padding: 8px">
            </a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
